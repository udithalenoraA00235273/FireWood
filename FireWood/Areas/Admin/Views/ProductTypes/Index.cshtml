@using FireWood.Models;
@model IEnumerable<ProductTypes>
@{
    ViewData["Title"] = "Index";
}
    <br/><br/>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Product Type</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> New Product Type</a>
        </div>
    </div>
    <br/>
    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(expression:c=>c.ProductType)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductType</td>
                    <td>
                        <partial name="_Button" model="@item.Id" />
                    </td>
                </tr>
            }
        </table> 
    </div>
