@using FireWood.Models;
@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> Add New Product</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(a => a.Name)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Price)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.ProductColor)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.ProductTypeId)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ProductColor</td>
                <td>@item.IsAvailable</td>
                <td>@item.ProductTypes.ProductType</td>
                <td>
                    <partial name="_Button" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>
